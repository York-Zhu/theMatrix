{
  "name": "twitter-following-tracker",
  "private": true,
  "version": "1.0.0",
  "description": "A desktop application that tracks Twitter users' following lists and alerts on new followings",
  "author": "Devin AI <devin-ai-integration[bot]@users.noreply.github.com>",
  "main": "frontend/electron/main.cjs",
  "scripts": {
    "start": "electron .",
    "build": "cd frontend && npm run build",
    "package": "electron-builder --linux --win",
    "package:linux": "electron-builder --linux",
    "package:win": "electron-builder --win",
    "postinstall": "cd frontend && npm install"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "electron-log": "^5.1.1"
  },
  "devDependencies": {
    "electron": "^34.3.0",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.twitter.following.tracker",
    "productName": "Twitter Following Tracker",
    "files": [
      "frontend/dist/**/*",
      "frontend/electron/**/*"
    ],
    "directories": {
      "buildResources": "resources",
      "output": "dist"
    },
    "extraResources": [
      {
        "from": "resources",
        "to": "resources",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "frontend/public/twitter-icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "icon": "frontend/public/twitter-icon.png",
      "category": "Network;SocialNetworking"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Twitter Following Tracker"
    },
    "deb": {
      "depends": ["libnotify4", "libxtst6", "libnss3"]
    }
  }
}
